  <h1>Log In</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table align="center" width="60%">
      <tr>
        <td align="center">
          <div class='container'><%= flash.alert %></div>
        </td>
      </tr>
      <tr>
        <td align="center">E-Mail</td>
      </tr>
      <tr>
        <td align="center"><%= f.email_field :email, class: "input" %></td>
      </tr>
      <tr>
        <td align="center">
          Password
          <% if @minimum_password_length %>
            (<%= @minimum_password_length %> characters minimum)
          <% end %>
        </td>
      </tr>
      <tr>
        <td align="center">
          <%= f.password_field :password, class: "input" %>
        </td>
      </tr>
      <tr>
        <td>
          <ul class="block">
            <li><%= link_to 'Back in menu', root_path %></li>
            <li><%= f.submit :"Log In", class: 'button', value: "Log In" %></li>
          </ul>
        </td>
      </tr>
    </table>
<% end %>
