  <h1>Load Game</h1>

  <div align="center">
    <%= form_with scope: :load_form, url: slots_path, local: true do |f| %>
      <table>
        <tr>
          <td align="center" colspan="3">
            <%= f.select :saves_list, Slot.all.collect {|s| [s.name, s.id]}, {:multiple => false}, {class: "box"} %>
		  </td>
        </tr>
          <tr>
            <td colspan="2" align="center">
              <div class="container"><%= flash.alert %></div>
            </td>
          </tr>
      </table>
      <ul class="block">
        <li><%= link_to "Cancel", game_path %></li>
        <li><%= f.button %></li>
      </ul>
    <% end %>
  </div>
